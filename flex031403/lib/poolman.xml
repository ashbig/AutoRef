<?xml version="1.0" encoding="UTF-8"?>

<poolman>

  <!-- ========================================================== -->
  <!-- These entries are an example of JDBC Connection pooling.   -->
  <!-- Many of the parameters are optional. Consult the           -->
  <!-- UsersGuide.html doument and the poolman.xml.tempalte file  -->
  <!-- for guidance and element definitions.                      -->
  <!-- ========================================================== -->

  <datasource>

    <!-- ============================== -->
    <!-- Physical Connection Attributes -->
    <!-- ============================== -->

    <!-- Standard JDBC Driver info -->

    <dbname>walldb</dbname>
    <jndiName>jndi-walldb</jndiName>
    <driver>oracle.jdbc.driver.OracleDriver</driver>
    <url>jdbc:oracle:thin:@kotel:1532:wall</url>
    <nativeResults>true</nativeResults>
    <username>flex_owner</username>
    <password>flex</password>
    <minimumSize>5</minimumSize>
    <maximumSize>30</maximumSize>
    <maximumSoft>false</maximumSoft>
    <initialConnections>5</initialConnections>
    <connectionTimeout>1200</connectionTimeout>
    <userTimeout>360</userTimeout>
    <shrinkBy>5</shrinkBy>
    <removeOnExceptions>true</removeOnExceptions>
    <!-- logging info-->
    <logFile>poolman.log</logFile>

    <debugging>false</debugging>

    <!-- Query Cache Attributes-->

    <cacheEnabled>false</cacheEnabled>
    <cacheSize>20</cacheSize>
    <cacheRefreshInterval>120</cacheRefreshInterval>

  </datasource>


</poolman>


