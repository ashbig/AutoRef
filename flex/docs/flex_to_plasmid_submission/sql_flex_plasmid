CREATE TABLE FLEX_PLASMID_DEFINITION_MAP
 (MAPTYPE VARCHAR2(60) NOT NULL
 ,FLEXID NUMBER(10,0) DEFAULT -1
 ,FLEXNAME VARCHAR2(400) NOT NULL
 ,PLASMIDID NUMBER(10,0) DEFAULT -1
 ,PLASMIDNAME VARCHAR2(400) NOT NULL
 ,VALUE1 VARCHAR2(240)
 ,VALUE2 VARCHAR2(240)
 );

ALTER TABLE FLEX_PLASMID_DEFINITION_MAP
 ADD (CONSTRAINT FP1_PK PRIMARY KEY 
  (MAPTYPE
  ,FLEXNAME
  ,PLASMIDNAME));



ALTER TABLE NAMETYPE  ADD (URL VARCHAR2(500) )
 MODIFY (DISPLAYTITLE VARCHAR2(240) );

update nametype set url='http://www.ncbi.nlm.nih.gov/entrez/viewer.fcgi?db=nucleotide&val=' where nametype='GENBANK_ACCESSION';


